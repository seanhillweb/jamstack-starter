{
	"name": "jamstack-starter",
	"version": "1.1.1",
	"description": "Minimal boilerplate for new projects built with Eleventy, Tailwind, PurgeCSS and PostCSS",
	"scripts": {
		"clean": "del dist",
		"dev:postcss": "postcss src/assets/stylesheets/*.css -o src/static/app.compiled.css --watch --verbose",
		"dev:scripts": "webpack --watch --config webpack.config.js",
		"dev:11ty": "eleventy --serve --watch",
		"build:postcss": "NODE_ENV=production postcss src/assets/stylesheets/app.css -o src/includes/app.compiled.css",
		"build:11ty": "ELEVENTY_ENV=production eleventy",
		"build:scripts": "NODE_ENV=production webpack -p --config webpack.config.js",
    "lint": "prettier --check *",
    "format": "prettier --write *",
		"start": "run-p dev:* --print-label",
		"build": "run-s clean build:* --print-label"
	},
	"author": "Sean Hill, Chris Collins",
	"license": "ISC",
	"devDependencies": {
		"@11ty/eleventy": "^2.0.1",
		"@babel/core": "^7.21.8",
		"@babel/preset-env": "^7.21.5",
		"autoprefixer": "^10.4.14",
		"babel-loader": "^9.1.2",
		"del-cli": "^5.0.0",
		"html-minifier": "^4.0.0",
		"luxon": "^3.3.0",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.4.23",
		"postcss-cli": "^10.1.0",
		"postcss-import": "^15.1.0",
		"prettier": "^2.8.8",
		"tailwindcss": "^3.3.2",
		"webpack": "^5.83.1",
		"webpack-cli": "^5.1.1"
	},
	"dependencies": {
		"alpinejs": "^3.12.1",
		"waypoints": "^4.0.1"
	}
}
